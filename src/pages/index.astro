  >

  <button
    class="bg-blue-500 text-white p-2 rounded duration-200"
    data-state="on"
    onclick="changeState(this)">Click Me 3</button
  >
  <script is:inline>
    function changeState(button) {
      const state = button.getAttribute("data-state")
      button.setAttribute("data-state", state === "on" ? "off" : "on")
      button.innerHTML = state === "on" ? "Turn Off" : "Turn On"
      button.classList.toggle("bg-blue-500")
      button.classList.toggle("bg-red-500")
    }
  </script>
